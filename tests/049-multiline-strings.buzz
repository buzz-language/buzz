import "std";
import "json";

test "Multiline strings" {
    str multi = `\{
        "some": "json",
        "yes": {3 + 12},
        {`
            "another": "one"
        `}
    }`;

    Json json = Json.decode(multi);

    assert(json.q(["yes"]).integer == 15, message: "multiline string is valid");
    assert(json.q(["another"]).string == "one", message: "multiline string is valid");
}