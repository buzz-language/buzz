import "std";

object Person {
    name: str,
    age: int,
    sex: bool,
}

test "Named expr object properties" {
    final name = "joe";
    final age = 24;

    final person = Person{
        name,
        age,
        sex = true,
    };

    std\assert(
        person.name == "joe"
            and person.age == 24
            and person.sex,
        message: "Could use named variable as object property value"
    );
}

fun hello(name: str, age: int, sex: bool) > Person {
    return Person{
        name,
        age,
        sex,
    };
}

test "Name expr function argument" {
    final name = "joe";
    final age = 24;

    final person = hello(name, age, sex: true);
    
    std\assert(
        person.name == "joe"
            and person.age == 24
            and person.sex,
        message: "Could use named variable as function arguments"
    );
}
