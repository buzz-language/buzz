import "lib/std";
import "lib/json";

test "Json.encode" {
    Json json = Json {
        map = {
            "hello": Json { string = "world" },
            "bye": Json { integer = 42 },
        },
    };

    assert(
        json.encode() == `\{"hello":"world","bye":42}`,
        message: "valid encode"
    );
}

test "Json.decode" {
    assert(
        Json.decode(`[ 12, true, "hello" ]`).listValue()[2].string == "hello",
        message: "could decode simple JSON"
    );
}

test "Json.q" {
    Json json = Json {
        map = {
            "submap": Json{
                map = {
                    "subsubmap": Json{
                        map = {
                            "one": Json{ integer = 1 },
                            "two": Json{ integer = 2 },
                        }
                    }
                }
            }
        },
    };

    assert(json.q(["submap", "subsubmap", "one"]).integer == 1, message: "Json.q");
}