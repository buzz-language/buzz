import "lib/std";
import "lib/debug" as debug;
import Json from "lib/json";

test "Get AST" {
    str source = debug.ast(`
        import \"lib/std\";
        
        fun main([str] args) > void -> print(\"hello world\");
    `, scriptName: "test");

    Json jsonAST = Json.decode(source);

    print(jsonAST.encode());
}

enum MyEnum {
    One,
    Two,
    Three,
}

enum(str) MyStringEnum {
    One,
    Two,
    Three,
}

object Data {
    [int] data,
}

object MyObject {
    str name,
    int age = 12,
    Data data,

    static fun init(str name, int age) > MyObject {
        return MyObject{
            name = name,
            age = age,
            data = Data{ data = [<int>] },
        };
    }
}

test "dump" {
    [int] list = [1, 2, 3, 4];
    {str, int} map = {
        "one": 1,
        "two": 2,
        "three": 3,
    };

    MyObject instance = MyObject{
        name = "joe",
        age = 35,
        data = Data{
            data = list
        },
    };

    debug.dump(<[int]>, list);
    debug.dump(<{str, int}>, map);
    debug.dump(<MyObject>, instance);
    debug.dump(<MyStringEnum>, MyStringEnum.One);
    debug.dump(<MyEnum>, MyEnum.One);
    debug.dump(<str>, "hello world");
    debug.dump(<pat>, _hello .*_);
}