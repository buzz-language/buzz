import "std";

fun main([str] args) > void {
    const int width = (if (args.len() > 0) parseInt(args[0]) else 80) ?? 80;
    const int height = (if (args.len() > 1) parseInt(args[1]) else 60) ?? 60;

    var cells = [<bool>];

    for (int i = 0; i < width * height; i = i + 1) {
        cells.append(random(max: 5) == 1);
    }

    for (int y = 0; y < height; y = y + 1) {
        for (int x = 0; x < width; x = x + 1) {
            cells[y * width + x] = !cells[y * width + x];
        }
    }
}